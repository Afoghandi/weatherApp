@using Microsoft.AspNetCore.Mvc.ViewFeatures
@{
    ViewData["Title"] = "Weather Search";
}

<div class="flex flex-col items-center justify-center h-screen bg-gradient-to-br from-blue-400 to-purple-600 text-white">
    <h1 class="text-4xl font-bold mb-6">Weather Search</h1>


    <form method="post" asp-action="GetWeather" class="bg-white p-6 rounded-lg shadow-md text-gray-800">
        <label for="city" class="block mb-2 font-semibold">Enter City Name</label>
        <input type="text" name="city" placeholder="Enter city name" class="w-full p-2 border rounded mb-4" />
        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Get Weather</button>
    </form>

</div>

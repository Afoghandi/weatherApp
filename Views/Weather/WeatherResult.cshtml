@model WeatherData

<div class="flex flex-col items-center justify-center h-screen animate-fadeIn bg-gradient-to-br from-blue-400 to-purple-600 text-white">
	
	<div class="bg-white rounded-lg shadow-md p-6 text-gray-800 w-96">
		<h1 class="text-2xl font-bold mb-4">Weather in @Model.Name</h1>
		<p class="text-xl">Temperature: <strong>@Model.Main.Temp°C</strong></p>
		<p class="text-lg">Feels Like: @Model.Main.Feels_Like°C</p>
	

		<p class="text-lg mb-6">Condition: <strong>@Model.Weather[0].Description</strong>


			<i class="@Model.Weather[0].Icon text-4xl ml-2 animate-bounceIcon"></i>
		</p>

		<a href="/Weather" class="w-full bg-primary text-white py-2 px-4 rounded hover: scale-105 transition-transform duration-200 text-center block">Search again</a>
	</div>
</div>

